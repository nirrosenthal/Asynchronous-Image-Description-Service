# Environment Configuration
# Copy this file to .env and update the values as needed

# Port Configuration (for Docker Compose)
WEB_PORT=8000
REDIS_PORT=6379
REDIS_TEST_PORT=6380

# Database Settings
DATABASE_URL=sqlite+aiosqlite:///./data/app.db

# Redis Settings
# For local development (outside Docker)
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379

# For Docker containers (production/development profiles)
# CELERY_BROKER_URL=redis://redis:6379
# CELERY_RESULT_BACKEND=redis://redis:6379

# For Docker test profile
# CELERY_BROKER_URL=redis://redis-test:6379
# CELERY_RESULT_BACKEND=redis://redis-test:6379

# Celery Settings
CELERY_WORKERS=1

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_DIR=data/images

# Task Settings
TASK_MAX_RETRIES=3
TASK_RETRY_DELAY=60 